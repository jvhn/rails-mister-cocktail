<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1494962227006-107baac595eb?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bb6541d87c6c4e45aa07f513224db142&auto=format&fit=crop&w=3306&q=80');">
  <div class="banner-content">
    <div class="text">
      <h1>Les cocktails</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="cards">
    <div class='row'>
      <% @cocktails.first(3).each do |cocktail| %>
        <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <div class="card " style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.3) 50%), url('<%=cocktail.photo_url%>');">
            <h4><%= cocktail.name %></h4>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class='row'>
      <% @cocktails[3..5].each do |cocktail| %>
        <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <div class="card " style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.3) 50%), url('<%=cocktail.photo_url%>');">
            <h4><%= cocktail.name %></h4>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

