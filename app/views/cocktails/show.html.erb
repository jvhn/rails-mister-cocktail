<div class="container">
  <div class="title">
    <h1><%= @cocktail.name %></h1>
  </div>

  <% array = []%>

  <% @cocktail.ingredients.each do |ingredient| %>
    <% @cocktail.doses.each_with_index do |dose, index| %>
      <% if ingredient.id == dose.ingredient_id %>
        <% array << [ingredient, dose] %>
      <% end %>
    <% end %>
  <% end %>

  <div class="dose-list">
    <% array.each do |ingredient, dose|%>
      <p><strong><%= ingredient.name %>:</strong> <%= dose.description %> <%= link_to dose_path(dose), method: :delete do %><i class="fa fa-trash"></i><% end %></p>
    <% end %>
    <div class="text-center add-link">
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary inputStyling' %>
    </div>
  </div>
</div>


